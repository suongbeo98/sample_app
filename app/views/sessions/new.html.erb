<% provide :title, t("login_link") %>
<h1><%= t ".header" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t(".lb_email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".lb_password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "session_remember_me" %>
        <span><%= t ".lb_checkbox" %></span>
      <% end %>
      <%= f.submit t(".submit_btn"), class: "btn btn-primary" %>
    <% end %>
    <p> <%= link_to t(".link1"), signup_path %></p>
  </div>
</div>
