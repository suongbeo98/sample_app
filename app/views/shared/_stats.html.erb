<% init_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.size - Settings.remembered %>
    </strong>
    <%= t ".content1" %>
    </a>
    <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.size - Settings.remembered %>
    </strong>
    <%= t ".content2" %>
  </a>
</div>
